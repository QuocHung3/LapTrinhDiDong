<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/purple_200"
      android:padding="15dp"
      android:text="Sửa Tác Giả"
      android:textAlignment="center"
      android:textColor="#5E35B1"
      android:textSize="25sp"
      android:textStyle="bold" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
        android:text="Mã tác giả :"/>

    <EditText
        android:id="@+id/et_suaMaTG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nhập mã tác giả..."
        android:minHeight="48dp" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên tác giả :"/>
    <EditText
        android:id="@+id/et_suaTenTG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nhập tên tác giả..."/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <Button
        android:id="@+id/btn_clear_suaTGDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
      android:text="Xoá trắng"/>
    <Button
        android:id="@+id/btn_xacNhanSuaTG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận sửa"/>
  </LinearLayout>
</LinearLayout>